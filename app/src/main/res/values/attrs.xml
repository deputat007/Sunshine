<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="SettingsItem">
    <attr format="string" name="titleText"/>
    <attr format="color" name="titleColor"/>
    <attr format="dimension" name="titleSize"/>
    <attr format="string" name="key"/>
    <attr format="string" name="defaultValue"/>

    <attr format="string" name="subtitleText"/>
    <attr format="color" name="subtitleColor"/>
    <attr format="dimension" name="subtitleSize"/>
    <attr format="enum" name="subtitleVisibility">
      <enum name="visible" value="0"/>
      <enum name="invisible" value="1"/>
      <enum name="gone" value="2"/>
    </attr>

    <attr format="enum" name="switchVisibility">
      <enum name="visible" value="0"/>
      <enum name="invisible" value="1"/>
      <enum name="gone" value="2"/>
    </attr>
  </declare-styleable>
</resources>